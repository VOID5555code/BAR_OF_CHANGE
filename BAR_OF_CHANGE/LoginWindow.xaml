<Window x:Class="BAR_OF_CHANGE.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAR_OF_CHANGE"
        mc:Ignorable="d"
        Title="LoginWindow" 
        WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary Source="Dictionary1.xaml" />
    </Window.Resources>

    <Grid Background="FloralWhite">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="FirstNameTextBox" Width="200" Margin="10" />
            <TextBox x:Name="EmailTextBox" Width="200" Margin="10" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="10" />
            <Button Content="Login" Width="200" Margin="10" Click="LoginButton_Click" />
            <Button Content="Register" Width="200" Margin="10" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Window>
